<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_item"
    android:background="@color/white"
    android:weightSum="5"
    android:paddingBottom="12dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/production_icon"
        android:layout_width="@dimen/height_list_item"
        android:layout_height="@dimen/height_list_item"
        android:src="@drawable/ic_iphone"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_gravity="center_vertical">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">
        <TextView
            android:id="@+id/production_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:textColor="#212121"
            android:textSize="24sp"
            android:layout_marginStart="@dimen/margin_start"
            android:gravity="center_vertical"
            android:text="abc" />
        <TextView
            android:id="@+id/production_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/margin_start"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>